<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6000000"
    tools:context=".LandingActivity">

    <TextView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0.7"
        android:background="@drawable/skyblurgood"
        android:fontFamily="@font/roboto" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/roboto"
        android:text="Choose a role"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="36sp" />

    <ImageButton
        android:id="@+id/controllerButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="130dp"
        android:alpha="0.9"
        android:adjustViewBounds="true"
        android:tint="@android:color/white"
        android:scaleType="fitXY"
        android:background="@drawable/landing_button_borders"
        android:onClick="selectController"
        android:src="@drawable/controllercircle" />

    <ImageButton
        android:id="@+id/speakerButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignParentBottom="false"
        android:layout_below="@id/controllerButton"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:alpha="0.9"
        android:background="@drawable/landing_button_borders"
        android:onClick="selectSpeaker"
        android:src="@drawable/speakercircle" />

    <TextView
        android:id="@+id/tvSpeaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/controllerButton"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/speakerButton"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/roboto"
        android:text="Speaker"
        android:textColor="@android:color/white"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/tvController"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="186dp"
        android:layout_toEndOf="@+id/controllerButton"
        android:fontFamily="@font/roboto"
        android:text="Controller"
        android:textColor="@android:color/white"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tvController"
        android:layout_below="@+id/tvController"
        android:alpha=".7"
        android:fontFamily="@font/roboto"
        android:text="pick music"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvSpeaker"
        android:layout_below="@+id/tvSpeaker"
        android:alpha=".7"
        android:fontFamily="@font/roboto"
        android:text="play music"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:alpha=".7"
        android:text="If you'd like to control the output and location  of your own track, be a controller. If not, be a speaker and hear music stream out of your device."
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:visibility="invisible" />


</RelativeLayout>